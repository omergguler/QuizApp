@page "/profile"
@model PropayTest.Pages.Profile.ProfileModel
@{
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>User Profile</title>
    @* <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet"> *@

    <link rel="stylesheet" href="~/css/Profile.css" />
</head>

<body>
    @if (Model.User != null)
    {
        <div class="container-all">

            <div class="navbar">
                <a href="#">Profile</a>
                <a href="#">Leaderboard</a>
                <a href="#">Create a Question</a>
                <a href="#">Create a Quiz</a>
                <a href="#">My Performance</a>
                <a href="#">Participant Results</a>
                <a href="#">Sign Out</a>
            </div>

            <div class="dashboard" style="overflow-x: hidden;">

                <div class="dashboard-top-section">
                    <h1>@Model.User.FullName</h1>
                    <h4><partial>@@</partial>@Model.User.UserName</h4>
                </div>


                <div class="dash-section">

                    <h1 class="dash-section-title">Recently Solved</h1>
                    <div class="list-container">

                        <ion-icon name="arrow-dropleft-circle" class="list-icon"></ion-icon>
                        
                        
                            <div class="scroll-list">
                                <div class="scroll-item">Item 1</div>
                                <div class="scroll-item">Item 2</div>
                                <div class="scroll-item">Item 3</div>
                                <div class="scroll-item">Item 4</div>
                                <div class="scroll-item">Item 5</div>
                                <div class="scroll-item">Item 6</div>
                                <div class="scroll-item">Item 7</div>
                                <div class="scroll-item">Item 8</div>
                            </div>
                        
                        
                        <ion-icon name="arrow-dropright-circle" class="list-icon"></ion-icon>
                    </div>
                </div>
                <div class="dash-section">
                    <h1 class="dash-section-title">Popular Quizzes</h1>
                    <div class="list-container">
                        <ion-icon name="arrow-dropleft-circle" class="list-icon"></ion-icon>

                        <div class="scroll-list">
                            <div class="scroll-item">Item 1</div>
                            <div class="scroll-item">Item 2</div>
                            <div class="scroll-item">Item 3</div>
                            <div class="scroll-item">Item 4</div>
                            <div class="scroll-item">Item 5</div>
                            <div class="scroll-item">Item 6</div>
                            <div class="scroll-item">Item 7</div>
                            <div class="scroll-item">Item 8</div>
                        </div>
                        <ion-icon name="arrow-dropright-circle" class="list-icon"></ion-icon>
                    </div>
                </div>
                <div class="dash-section">
                    <h1 class="dash-section-title">Top Performers</h1>
                    <div class="list-container">
                        <ion-icon name="arrow-dropleft-circle" class="list-icon"></ion-icon>

                        <div class="scroll-list">
                            <div class="scroll-item">Item 1</div>
                            <div class="scroll-item">Item 2</div>
                            <div class="scroll-item">Item 3</div>
                            <div class="scroll-item">Item 4</div>
                            <div class="scroll-item">Item 5</div>
                            <div class="scroll-item">Item 6</div>
                            <div class="scroll-item">Item 7</div>
                            <div class="scroll-item">Item 8</div>
                        </div>
                        <ion-icon name="arrow-dropright-circle" class="list-icon"></ion-icon>
                    </div>
                </div>





            </div>
        </div>

    }
    else
    {
        <p>User not found or you are not authorized to view this profile.</p>
    }

    <script src="https://unpkg.com/ionicons@4.5.10-0/dist/ionicons.js"></script>
</body>


</html>



