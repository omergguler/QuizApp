@page "/profile/library"
@model PropayTest.Pages.Library.LibraryModel
@{
}


<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>My Library</title>
    <link rel="stylesheet" href="~/css/Library.css" />

    <!-- Include Popper.js before Bootstrap -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.11.8/umd/popper.min.js"></script>
    <!-- Include Bootstrap CSS and JS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>


</head>

<body>
    @if (Model.User != null)
    {
        @* <h1>My Library</h1>
    <h3>Library of @Model.User.FullName</h3> *@
        <div class="custom-container">

            <div class="questions item">
                <div class="item-top-section">
                    <img src="~/icons/quiz2.png" />
                    <h3>My Quizzes</h3>
                </div>
                <div class="item-body-section">
                    @* // list of quizzes *@
                    <div class="list-container">
                        <div class="scroll-list">
                            @foreach (var quiz in Model.Quizzes)
                            {
                                <a href="/quiz?id=@quiz.Id">
                                    <div class="scroll-item" data-id="@quiz.Id">
                                        <h4>@quiz.Title</h4>
                                        <h6>@quiz.Description</h6>
                                    </div>
                                </a>
                                
                            }
                        </div>
                    </div>
                </div>
            </div>
            <div class="questions item">
                <div class="item-top-section">
                    <img src="~/icons/qa.png" />
                    <h3>My Questions</h3>
                </div>
                <div class="item-body-section">
                    @* // list of questions *@
                    <div class="list-container">
                        <div class="scroll-list">
                            @foreach (var question in Model.Questions)
                            {
                                <div class="scroll-item question" data-id="@question.QuestionId">
                                    <h6 class="truncate">@question.QuestionText</h6>
                                    <h6 class="truncate">Answer: @question.CorrectChoice</h6>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
            <div class="questions item">
                <div class="item-top-section">
                    <img src="~/icons/bookmarks.png" />
                    <h3>Bookmarks</h3>
                </div>
            </div>
            <div class="questions item">
                <div class="item-top-section">
                    <img src="~/icons/favourites.png" />
                    <h3>Favourites</h3>
                </div>
            </div>
            <div class="questions item">
                <div class="item-top-section">
                    <img src="~/icons/medal.png" />
                    <h3>Achievements</h3>
                </div>
            </div>


        </div>


    }
    else
    {
        <p>User not found or you are not authorized to view this profile.</p>
    }






    <script src="https://unpkg.com/ionicons@4.5.10-0/dist/ionicons.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>







</body>


</html>
